    <include layout="@layout/main_titlebar" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


<!--        <androidx.viewpager.widget.ViewPager-->
<!--            android:id="@+id/home_slide"-->
<!--            android:layout_width="match_parent"-->
<!--            android:layout_height="180dp"-->
<!--            android:layout_gravity="center_horizontal" />-->

        <LinearLayout
            android:id="@+id/optimal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="最优匹配"
                android:textSize="20dp"
                android:textStyle="bold"

                />


            <Button
                android:id="@+id/want"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:text="Want"

                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/item_back_update_ui"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:layout_marginLeft="15dp"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/item_start_place" />

                    <ImageView
                        android:layout_width="7dp"
                        android:layout_height="25dp"
                        android:layout_marginLeft="28dp"
                        android:background="@drawable/item_temp_change"

                        />

                    <ImageView
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:layout_marginLeft="15dp"
                        android:background="@drawable/item_end_place"

                        />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/cargo_site_optimal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentTop="true"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="10dp"
                        android:text="出发"
                        android:textSize="26dp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/cargo_des_optimal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="25dp"
                        android:text="目的"
                        android:textSize="26dp"
                        android:textStyle="bold" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="20dp"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/const_weight"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="货物吨位："
                                android:textSize="14dp"
                                android:textStyle="bold" />

                            <TextView

                                android:id="@+id/cargo_weight_optimal"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignBottom="@id/const_weight"
                                android:layout_marginLeft="5dp"
                                android:layout_toRightOf="@id/const_weight"
                                android:text="货物重量"
                                android:textSize="14dp"
                                android:textStyle="bold" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="20dp"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/const_kind"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="货物种类:"
                                android:textSize="14dp"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/cargo_kind_optimal"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"

                                android:layout_marginLeft="5dp"
                                android:text="货物种类"
                                android:textSize="14dp"
                                android:textStyle="bold" />
                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="20dp"
                            android:layout_marginTop="27dp"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/const_date"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="到达时间"
                                android:textSize="14dp"
                                android:textStyle="bold" />

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <TextView
                                    android:id="@+id/cargo_month_optimal"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"

                                    android:layout_marginLeft="11dp"
                                    android:text="9"
                                    android:textSize="14dp"
                                    android:textStyle="bold" />

                                <TextView
                                    android:id="@+id/const_month"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginBottom="0dp"
                                    android:text="月"
                                    android:textSize="14dp"
                                    android:textStyle="bold" />

                                <TextView
                                    android:id="@+id/cargo_day_optimal"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="41"
                                    android:textSize="14dp"
                                    android:textStyle="bold" />

                                <TextView
                                    android:id="@+id/const_day"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="日"
                                    android:textSize="14dp"
                                    android:textStyle="bold" />
                            </LinearLayout>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="20dp"
                            android:layout_marginTop="27dp"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/const_user_item_info"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="货主信息"

                                android:textSize="14dp"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/const_user_item_name_optimal"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="11dp"
                                android:text="王大锤"
                                android:textSize="14dp"
                                android:textStyle="bold" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="27dp"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/const_phone_item_info"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="货主手机"

                                android:textSize="14dp"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/const_phone_item_name_optimal"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="18234631953"
                                android:textSize="14dp"

                                android:textStyle="bold" />
                        </LinearLayout>

                    </LinearLayout>


                </LinearLayout>
            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="10dp"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="推荐匹配"
                android:textSize="20dp"
                android:textStyle="bold"

                />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/cargo_info_home"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:listitem="@layout/item_infolist"/>

        </LinearLayout>



    </LinearLayout>


</LinearLayout>