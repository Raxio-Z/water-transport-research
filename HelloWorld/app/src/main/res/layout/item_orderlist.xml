<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/item_back_update_ui"
                android:elevation="30dp"
                android:padding="10dp">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

        <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

            <ImageView
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/item_start_place" />

            <ImageView
                    android:layout_width="7dp"
                    android:layout_height="25dp"
                    android:layout_marginLeft="28dp"
                    android:background="@drawable/item_temp_change"

            />

            <ImageView
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:layout_marginLeft="15dp"
                    android:background="@drawable/item_end_place"

            />
        </LinearLayout>

        <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

            <TextView
                    android:id="@+id/order_site"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:text="出发"
                    android:textSize="26dp"
                    android:textStyle="bold" />

            <TextView
                    android:id="@+id/order_des"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="25dp"
                    android:text="目的"
                    android:textSize="26dp"
                    android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="vertical">

            <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:orientation="vertical">

                    <TextView
                            android:id="@+id/const_weight"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="货物吨位："
                            android:textSize="14dp"
                            android:textStyle="bold" />

                    <TextView

                            android:id="@+id/order_weight"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignBottom="@id/const_weight"
                            android:layout_marginLeft="5dp"
                            android:layout_toRightOf="@id/const_weight"
                            android:text="货物重量"
                            android:textSize="14dp"
                            android:textStyle="bold" />
                </LinearLayout>

                <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:orientation="vertical">

                    <TextView
                            android:id="@+id/const_kind"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="货物种类:"
                            android:textSize="14dp"
                            android:textStyle="bold" />

                    <TextView
                            android:id="@+id/order_kind"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"

                            android:layout_marginLeft="5dp"
                            android:text="货物种类"
                            android:textSize="14dp"
                            android:textStyle="bold" />
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">


                <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="27dp"
                        android:orientation="vertical">

                    <TextView
                            android:id="@+id/const_user_item_info"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="货主ID"

                            android:textSize="14dp"
                            android:textStyle="bold" />

                    <TextView
                            android:id="@+id/order_user_item_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="11dp"
                            android:text="王大锤"
                            android:textSize="14dp"
                            android:textStyle="bold" />

                </LinearLayout>

                <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="27dp"
                        android:orientation="vertical">

                    <TextView
                            android:id="@+id/order_phone_item_info"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="当前货物状态"

                            android:textSize="14dp"
                            android:textStyle="bold" />

                    <TextView

                            android:id="@+id/const_phone_item_name"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="XXX"
                            android:textSize="14dp"
                            android:gravity="right"
                            android:textStyle="bold" />
                </LinearLayout>

            </LinearLayout>


        </LinearLayout>
    </LinearLayout>


</RelativeLayout>

