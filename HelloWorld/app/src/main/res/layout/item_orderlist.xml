<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="20dp"
    android:layout_marginTop="10dp"
    android:layout_marginRight="20dp"
    android:layout_marginBottom="10dp"
    android:background="@drawable/item_back_update_ui"
    android:elevation="30dp">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

        <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

            <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="17dp"
                    android:background="@mipmap/item_start_place"/>

            <ImageView
                    android:layout_width="4dp"
                    android:layout_height="15dp"
                    android:layout_marginLeft="23dp"
                    android:background="@mipmap/item_temp_change"
            />

            <ImageView
                    android:layout_width="20dp"
                    android:layout_height="24dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="17dp"
                    android:background="@mipmap/item_end_place"/>
        </LinearLayout>

        <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

            <TextView
                    android:id="@+id/order_site"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="17dp"
                    android:text="出发"
                    android:textColor="@color/black"
                    android:textSize="18sp"
                    android:textStyle="bold"/>

            <TextView
                    android:id="@+id/order_des"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="21dp"
                    android:layout_marginBottom="17dp"
                    android:text="目的"
                    android:textColor="@color/black"
                    android:textSize="18sp"
                    android:textStyle="bold"/>
        </LinearLayout>

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:orientation="vertical">

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="50"

                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:orientation="vertical">

                    <TextView
                            android:id="@+id/const_weight"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="货物吨位"
                            android:textSize="10sp"/>

                    <TextView
                            android:id="@+id/order_weight"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignBottom="@id/const_weight"
                            android:layout_marginTop="3dp"
                            android:layout_toRightOf="@id/const_weight"
                            android:text="货物重量"
                            android:textColor="@color/black"
                            android:textSize="10sp"/>
                </LinearLayout>

                <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="50"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:orientation="vertical">

                    <TextView
                            android:id="@+id/const_kind"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="货物种类:"
                            android:textSize="10sp"/>

                    <TextView
                            android:id="@+id/order_kind"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="3dp"
                            android:text="货物种类"
                            android:textColor="@color/black"
                            android:textSize="10sp"/>
                </LinearLayout>


            </LinearLayout>

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">


                <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="50"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="17dp"
                        android:orientation="vertical">

                    <TextView
                            android:id="@+id/const_user_item_info"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="货主ID"

                            android:textSize="10sp"/>

                    <TextView
                            android:id="@+id/order_user_item_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="3dp"
                            android:text="王大锤"
                            android:textColor="@color/black"
                            android:textSize="10sp"/>

                </LinearLayout>

                <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="50"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="30dp"
                        android:layout_marginTop="17dp"
                        android:orientation="vertical">

                    <TextView
                            android:id="@+id/order_phone_item_info"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="当前货物状态"
                            android:textSize="10sp"/>

                    <TextView
                            android:id="@+id/const_phone_item_name"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="3dp"
                            android:text="XXX"
                            android:textColor="@color/black"
                            android:textSize="10sp"/>
                </LinearLayout>

            </LinearLayout>


        </LinearLayout>
    </LinearLayout>


</RelativeLayout>

