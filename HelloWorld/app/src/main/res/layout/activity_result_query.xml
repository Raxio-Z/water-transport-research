<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".BoatQuery">

    <include layout="@layout/main_titlebar"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/yellow"
        android:text="欢迎查看自动匹配结果"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:layout_marginTop="60dp"
        />

    <TextView
        android:id="@+id/cargo_site01"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="60dp"
        android:layout_marginTop="110dp"
        android:text="出发"
        android:textSize="20sp"
        android:textStyle="bold"></TextView>

    <ImageView
        android:id="@+id/cargo_arrow01"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/cargo_site01"
        android:layout_toRightOf="@id/cargo_site01"
        android:layout_marginLeft="10dp"
        android:background="@mipmap/arrow"></ImageView>


    <TextView
        android:id="@+id/cargo_des01"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/cargo_arrow01"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@+id/cargo_arrow01"
        android:text="目的"
        android:textSize="20sp"
        android:textStyle="bold"></TextView>

    <TextView
        android:id="@+id/const_weight01"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="180dp"
        android:text="货物吨位："
        android:textSize="15sp"
        android:textStyle="bold"></TextView>

    <TextView
        android:id="@+id/cargo_weight01"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/const_weight01"
        android:layout_marginLeft="2dp"
        android:layout_toRightOf="@id/const_weight01"
        android:text="货物重量"
        android:textSize="15sp"
        android:textStyle="bold"></TextView>

    <TextView
        android:id="@+id/const_kind01"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/cargo_weight01"
        android:layout_marginLeft="20dp"
        android:layout_toRightOf="@+id/cargo_weight01"
        android:text="货物种类:"
        android:textSize="15sp"
        android:textStyle="bold"></TextView>

    <TextView
        android:id="@+id/cargo_kind01"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/const_kind01"
        android:layout_marginLeft="2dp"
        android:layout_toRightOf="@+id/const_kind01"
        android:text="货物种类"
        android:textSize="15sp"
        android:textStyle="bold"></TextView>

    <TextView
        android:id="@+id/const_hope01"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="120dp"
        android:layout_marginTop="100dp"
        android:text="望"
        android:textSize="15sp"
        android:textStyle="bold"></TextView>


    <TextView
        android:id="@+id/cargo_month01"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/const_hope01"
        android:layout_marginLeft="2dp"
        android:layout_toRightOf="@id/const_hope01"
        android:text="9"
        android:textSize="15sp"
        android:textStyle="bold"></TextView>

    <TextView
        android:id="@+id/const_month01"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/cargo_month01"
        android:layout_marginLeft="2dp"
        android:layout_toRightOf="@id/cargo_month01"
        android:text="月"
        android:textSize="15sp"
        android:textStyle="bold"></TextView>

    <TextView
        android:id="@+id/cargo_day01"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/const_month01"
        android:layout_alignBottom="@id/const_month01"
        android:layout_marginLeft="2dp"
        android:text="41"
        android:textSize="15sp"
        android:textStyle="bold"></TextView>

    <TextView
        android:id="@+id/const_day01"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/cargo_month01"
        android:layout_marginLeft="2dp"
        android:layout_toRightOf="@id/cargo_day01"
        android:text="日到达"
        android:textSize="15sp"
        android:textStyle="bold"></TextView>

    <TextView
        android:id="@+id/test01"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="300dp"
        android:layout_marginLeft="20dp"
        ></TextView>

    <ImageView
        android:layout_width="24dp"
        android:layout_height="23dp"
        android:layout_marginStart="155dp"
        android:layout_marginTop="145dp"
        android:background="@mipmap/phone"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="147sp"
        android:text="货主："
        android:textSize="15sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/name01"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:layout_marginTop="147sp"
        android:text="货主姓名"
        android:textSize="15sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/phone01"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="182dp"
        android:layout_marginTop="147dp"
        android:text="电话号码"
        android:textStyle="bold"
        android:textSize="15sp"
        />


</RelativeLayout>