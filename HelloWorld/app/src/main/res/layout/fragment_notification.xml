<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.notification.NotificationFragment">

    <!-- TODO: Update blank fragment layout -->
    <TextView
        android:id="@+id/text_notification"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:paddingTop="8dp"
        android:layout_marginEnd="8dp"
        android:textAlignment="center"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            tools:context=".InfoList">

        <include layout="@layout/main_titlebar"/>
        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:padding="10dp"
                android:background="@drawable/new_user_back_ground"
                android:gravity="center">
<LinearLayout android:layout_width="match_parent" android:layout_height="match_parent"
android:background="#517DC1">
            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="货源大厅"
                    android:textColor="@color/white"
                    android:background="#517DC1"

                    android:textAppearance="@style/TextAppearance.AppCompat.Large"/>
</LinearLayout>
        </RelativeLayout>
        <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
        android:orientation="horizontal">
            <TextView  android:layout_height="wrap_content"
                      android:id="@+id/huoyuan_under_line"
                      android:textSize="17dp"
                       android:layout_width="0dp"
                       android:layout_weight="20"
                      android:textColor="@color/black" android:text="发货地"
                      android:layout_marginLeft="10dp"/>
            <TextView  android:layout_height="wrap_content"

                      android:textSize="17dp"
                      android:layout_width="0dp"
                      android:layout_weight="20"
                       android:gravity="center"
                      android:textColor="@color/black" android:text="收货地"
                      android:layout_marginLeft="10dp"/>
            <TextView  android:layout_height="wrap_content"

                      android:textSize="17dp"
                       android:layout_width="0dp"
                       android:layout_weight="20"
                       android:gravity="center"
                       android:textColor="@color/black" android:text="船型"
                      android:layout_marginLeft="10dp"/>
            <TextView android:layout_height="wrap_content"

                      android:textSize="17dp"
                      android:layout_width="0dp"
                      android:layout_weight="20"
                      android:gravity="center"
                      android:textColor="@color/black" android:text="船长"
                      android:layout_marginLeft="10dp"/>
            <TextView android:layout_height="wrap_content"

                      android:textSize="17dp"
                      android:layout_width="0dp"
                      android:gravity="center"
                      android:layout_weight="30"
                      android:textColor="@color/black" android:text="用船类型"
                      android:layout_marginLeft="10dp"/>
        </LinearLayout>

        <!--    <ListView
                android:id="@+id/cargo_info"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:divider="@color/divider"
                android:dividerHeight="1dp"


                ></ListView>-->

        <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/cargo_info"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:listitem="@layout/item_infolist"
        ></androidx.recyclerview.widget.RecyclerView>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="42dp"
            android:background="@color/white"

            />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>