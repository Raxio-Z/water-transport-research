        <item name="android:textSize">
            18sp
        </item>

        <item name="android:textColor">
            #E6000000
        </item>

        <item name="android:fontFamily">
           "Noto Sans SC"
        </item>
    </style>

    <style name="phone">

        <item name="android:textSize">
            14sp
        </item>

        <item name="android:textColor">
            #CC000000
        </item>

        <item name="android:fontFamily">
            "Noto Sans SC"
        </item>
    </style>

    <style name="func">

        <item name="android:textSize">
            15sp
        </item>

        <item name="android:textColor">
            #CC000000
        </item>

